<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1>修改記事</h1>
    <div>
      <form action="/pets/<%= pet._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="title">標題</label>
          <input class="form-control" type="text" name="pet[title]" id="title" value="<%= pet.title %>">
        </div>
        <div class="form-group">
          <label for="image">圖片網址</label>
          <input class="form-control" type="text" name="pet[image]" id="image" value="<%= pet.image %>">
        </div>
        <div class="form-group">        
          <label for="description">記事</label>
          <textarea class="form-control" name="pet[description]" rows="3"><%= pet.description %></textarea>
        </div>
        <div class="form-group">
          <button classs="btn btn-lg btn-primary btn-block">修改</button>
        </div>   
      </form>
      <a href="/pets">回主頁</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>